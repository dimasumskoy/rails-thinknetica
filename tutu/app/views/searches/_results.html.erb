<h1>Результаты поиска</h1>
<p>
    <table>
        <thead>
            <tr>
                <td><b>Маршрут</b></td>
                <td><b>Время отправления</b></td>
                <td><b>Время прибытия</b></td>
            </tr>
        </thead>
        <tbody>
        <% @routes.each do |route| %>
            <tr>
                <td><%= route.name %></td>
                <td><%= route.first_station_time %>
                <td><%= route.last_station_time %>
            </tr>
        <% end %>
        </tbody>
    </table>
</p>

<p>
    <strong>Поезда на маршрутах: </strong>
    <% @trains.each do |train| %>
        <p>
            <%= train.route.name %>
            <ul>
                <li><%= train.number %></li>
            </ul>
        </p>
    <% end %>
</p>