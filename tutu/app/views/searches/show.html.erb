<h1>Поиск билета</h1>

<p>
    <%= form_tag result_search_path, method: :get do %>
        <p>
            <%= label_tag :first_station_id, 'Начальная станция:' %>
            <%= collection_select(:stations, :first_station_id, RailwayStation.all, :id, :title) %>
        </p>
        <p>
            <%= label_tag :last_station_id, 'Конечнная станция:' %>
            <%= collection_select(:stations, :last_station_id, RailwayStation.all, :id, :title) %>
        </p>
        <p><%= submit_tag 'Search' %></p>
    <% end %>
</p>

<p><%= link_to 'Назад', welcome_index_path %></p>