<div class="page-header">
    <h1>Поиск билета</h1>
</div>

<div class="form-group">
    <%= form_tag search_path, method: :post do %>
        <p>
            <%= label_tag :first_station_id %>
            <%= collection_select :stations, :first_station_id, RailwayStation.all, :id, :title, {}, class: 'form-control' %>
        </p>
        <p>
            <%= label_tag :last_station_id %>
            <%= collection_select :stations, :last_station_id, RailwayStation.all, :id, :title, {}, class: 'form-control' %>
        </p>
        <p><%= submit_tag 'Поиск', class: "btn btn-default" %></p>
    <% end %>
</div>

<% if @routes.present? %>
    <%= render 'results' %>
<% end %>

<p><%= link_to 'Назад', welcome_index_path, class: 'btn btn-primary btn-xs' %></p>