<% hide = false unless local_assigns[:hide] %>
<%= form_for [:admin, railway_station], html: { style: "display: #{hide ? 'none' : 'block'}" } do |form| %>
  <%= render 'common/errors', resource: railway_station %>
  
  <div class="field">
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: railway_station.new_record? ? 'Создать' : 'Изменить'), class: "btn btn-default" %>
  </div>
<% end %>
