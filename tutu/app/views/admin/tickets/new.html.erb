<h1>Новый билет</h1>

<%= form_for [:admin, @ticket] do |form| %>
  <div class="field">
    <%= form.label :train %>
    <%= form.collection_select :train_id, Train.all, :id, :number, {}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :depart_station %>
    <%= form.collection_select :depart_station_id, RailwayStation.all, :id, :title, {}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :arrive_station %>
    <%= form.collection_select :arrive_station_id, RailwayStation.all, :id, :title, {}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :user %>
    <%= form.collection_select :user_id, User.all, :id, :last_name, {}, class: 'form-control' %>
  </div>

  <%= render 'common/user_data', form: form %>

  <div class="actions">
    <%= form.submit t('.submit', action: @ticket.new_record? ? 'Создать' : 'Изменить'), class: "btn btn-default" %>
  </div>
<% end %>