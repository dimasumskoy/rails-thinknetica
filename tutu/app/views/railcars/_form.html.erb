<%= form_with(model: [train, railcar], local: true) do |form| %>
  <%= render 'common/errors', resource: railcar %>
  
  <div class="field">
    <%= form.label :type %>
    <%= form.select(:type, [
      ['Купе', 'CoupeRailcar'], ['СВ', 'ComfortRailcar'],
      ['Плацкарт', 'EconomyRailcar'], ['Сидячий', 'SittingRailcar']
    ]) %>
  </div>

  <div class="field">
    <%= form.label :top_seats %>
    <%= number_field :railcar, :top_seats, in: 1.0..27.0 %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= number_field :railcar, :bottom_seats, in: 1.0..27.0 %>
  </div>

  <div class="field">
    <%= form.label :side_top_seats %>
    <%= number_field :railcar, :side_top_seats, in: 1.0..18.0 %>
  </div>

  <div class="field">
    <%= form.label :side_bottom_seats %>
    <%= number_field :railcar, :side_bottom_seats, in: 1.0..18.0 %>
  </div>

  <div class="field">
    <%= form.label :sitting_seats %>
    <%= number_field :railcar, :sitting_seats, in: 1.0..65.0 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
