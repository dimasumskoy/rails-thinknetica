<p id="notice"><%= notice %></p>

<h1>Railcars</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railcars.each do |railcar| %>
      <tr>
        <td><%= railcar.railcar_type %></td>
        <td><%= link_to 'Show', railcar %></td>
        <td><%= link_to 'Edit', edit_railcar_path(railcar) %></td>
        <td><%= link_to 'Destroy', railcar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Railcar', new_railcar_path %><br>
