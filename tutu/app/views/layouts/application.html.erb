<!DOCTYPE html>
<html>
  <head>
    <title>Tutu</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
      <p align="right"><%= link_to 'Выйти', destroy_user_session_path, method: :delete %></p>
    <% else %>
      <p align="right"><%= link_to 'Войти', new_user_session_path %></p>
    <% end %>

    <%= yield %>
    <%= render 'common/footer' %>
  </body>
</html>
