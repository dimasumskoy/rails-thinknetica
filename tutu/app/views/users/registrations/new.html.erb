<div class="log-in-page">
<h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, t('.email') %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :first_name, t('.first_name') %><br />
      <%= f.text_field :first_name, id: :user_first_name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :last_name, t('.last_name') %><br />
      <%= f.text_field :last_name, id: :user_last_name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password, t('.password') %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> символов минимум)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t('.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit t('.sign_up'), class: 'btn btn-default' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>